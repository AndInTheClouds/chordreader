<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.nolanlawson.chordreader" android:versionCode="6"
	android:versionName="0.9.5">

	<application android:icon="@drawable/chord_reader_icon" android:label="@string/app_name">
	
	
		<!-- The application's publisher ID assigned by AdMob -->
		<meta-data android:value="a14d44abce1f246" android:name="ADMOB_PUBLISHER_ID" />
		<meta-data android:value="true" android:name="AD_REQUEST" />
		<meta-data android:value="true" android:name="TEST_MODE" />
		        
		<!-- AdMobActivity definition -->
		<activity android:name="com.admob.android.ads.AdMobActivity"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:configChanges="orientation|keyboard|keyboardHidden" />
	
		<activity android:name=".FindChordsActivity" android:label="@string/app_name"
			android:configChanges="keyboard|keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

			
		</activity>

		<activity android:name=".AboutActivity" android:theme="@android:style/Theme.Dialog" />
		
		<activity android:name=".SettingsActivity" android:label="@string/settings"/>

	</application>

	<uses-sdk android:minSdkVersion="3" android:targetSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />


</manifest> 